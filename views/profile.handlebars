<div class="card mt-6 notification is-warning">
  <div class="card-content">
    <h2 class="title is-2">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="divider is-warning"></div>

<div class="card-content" style="background-color: rgba(255, 221, 87, 0.3)">
  <div class="col-md-6">
    <h3 class="title is-3 has-text-centered">Add a new cocktail recipe? oh hell yeh!</h3>

    <form class="form-horizontal" id="cocktail-form">
      <fieldset>
        <!-- cocktail Name text field-->
        <div class="field">
          <label class="label" for="ct-name">Cocktail Name</label>
          <div class="control">
            <input id="ct-name" name="name" type="text" placeholder="Enter the name of your cocktail" class="input" required="">
          </div>
        </div>

        <!-- cocktail Description textarea-->
        <div class="field">
          <label class="label" for="ct-desc">Cocktail Description</label>
          <div class="control">                     
            <textarea placeholder="Enter a description for your yummy cocktail here!" class="textarea" id="ct-desc" name="description"></textarea>
          </div>
        </div>

        <!-- Cocktail Category select box-->
        <div class="field">
          <label class="label" for="ct-cat">Cocktail Category</label>
          <div class="control">
  	        <div class="select">
	            <select id="ct-cat" name="category" class="">
                <option>Contemporary Classics</option>
                <option>Unforgettables</option>
                <option>Tropical</option>
                <option>Dry</option>
                <option>Sweet</option>
              </select>
	          </div>
          </div>
        </div>

        <!-- Cocktail Instructions textarea -->
        <div class="field">
          <label class="label" for="ct-instr">Cocktail Instructions</label>
          <div class="control">                     
            <textarea placeholder="Enter the instructions on how to make your cocktail!!" class="textarea" id="ct-instr" name="instructions"></textarea>
          </div>
        </div>

        <!-- Alcoholic or Non-Alcoholic Radios -->
        <div class="field">
          <label class="label" for="ct-alc">Please choose one</label>
          <div class="control">
            <label class="radio" for="ct-alc-0">
              <input type="radio" name="alcoholic" id="ct-alc-0" value="Alcoholic" checked="checked" required="required">Alcoholic
            </label>

            <label class="radio" for="ct-alc-1">
              <input type="radio" name="alcoholic" id="ct-alc-1" value="Non-Alcoholic" required="required">Non-Alcoholic
            </label>
          </div>
        </div>

        <!-- Ingredient text input-->
        <div id="ingredients">
          <div class="field">
            <button type="button" class="button is-warning my-3" id="addIngredient">Add   Ingredient</button>
            <div class="control">
              <input id="Ingredient1" name="Ingredient 1" type="text" placeholder="Ingredient 1" class="input " required="">
            </div>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="button is-link my-3">Create</button>
        </div>
      </fieldset>
    </form>
  </div>

  {{!-- checks to see if logged in user has craeted any cocnktails, if so displays them, witha  button to delete each one --}}
  {{#if cocktails.length}}
  <div class="card mt-6">
    <h3 class="title is-4">Current Cocktails you have added:</h3>

    {{#each cocktails as |cocktail|}}
    <div class="card">
      <div class="card-content">
        <h4><a href="/cocktail/{{cocktail.id}}">{{cocktail.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="button btn-danger" data-id="{{cocktail.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{!-- Modal for successful cocktal making --}}
<div id="modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="notification is-success" id="modal-message"></div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

{{!-- Modal for deleteing cocktails --}}
<div id="delete-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="notification is-danger" id="delete-modal-message"></div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

{{!-- page loaders for when deleteing or adding cocktails --}}
<div id="delete-loader" style="background-color: rgb(232, 189, 123)" class="pageloader is-danger is-bottom-to-top"><span class="title">NOW DEBETING COCKTAIL...</span></div>
<div id="success-loader" style="background-color: rgb(138, 206, 223)" class="pageloader is-bottom-to-top"><span class="title">NOW CREATING COCKTAIL... <br /> RETURNING TO MAIN PAGE...</span></div>

